{
  "name": "@frontal/style-guide",
  "description": "Robust linting for modern TypeScript apps.",
  "files": ["biome.json", "scripts"],
  "homepage": "https://github.com/frontalhq/style-guide#readme",
  "license": "ISC",
  "main": "./biome.json",
  "version": "1.1.0",
  "type": "module",
  "contributors": [
    {
      "name": "Gabriel Fonseca",
      "url": "https://github.com/gabrielvfonseca"
    }
  ],
  "keywords": [
    "frontal",
    "style-guide",
    "biome",
    "linter",
    "formatter",
    "fixer"
  ],
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "conventional-commits",
      "first-time-contributor",
      "released"
    ]
  },
  "author": {
    "name": "Gabriel Fonseca",
    "email": "jg.fonseca@outlook.pt"
  },
  "bugs": {
    "url": "https://github.com/frontalhq/style-guide/issues"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "@frontal/style-guide": "./scripts/action.mjs"
  },
  "scripts": {
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "init": "node ./scripts/action.mjs init",
    "lint": "node ./scripts/action.mjs lint",
    "format": "node ./scripts/action.mjs format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontalhq/style-guide.git"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "commander": "^12.1.0"
  }
}
